                        <div class="flex-container">
                            <div>
                                <a class="prev">&#10094;</a>
                            </div>
                            <div class="text">Patterns</div>
                            <div>
                                <a class="next">&#10095;</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slides fade" id="slide2">
                    <img src="/images/img3.jpg" style="width:100%" class="slide-img">
                    <div class="absolute">
                        <div class="flex-container">
                            <div>
                                <a class="prev">&#10094;</a>
                            </div>
                            <div class="text">Toys</div>
                            <div>
                                <a class="next">&#10095;</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="text-align:center">
                <span class="dot" id="dot0"></span>
                <span class="dot" id="dot1"></span>
                <span class="dot" id="dot2"></span>
            </div>
        </div>
        <div class="flex-container">
            <div>
                <img src="/images/img1.jpg" style="width:30px">
            </div>
            <div>
                <img src="/images/img1.jpg" style="width:30px">
            </div>
            <div>
                <img src="/images/img1.jpg" style="width:30px">
            </div>
            <div>
                <img src="/images/img1.jpg" style="width:30px">
            </div>
        </div>
    </main>
  </body>
</html>
