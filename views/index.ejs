  </head>
  <body>
    <% include templates/header.ejs%>
    <main>
        <div class="slideshow-container">
            <div>
                <div class="slides fade" id="slide0">
                    <img src="/images/img1.jpg" style="width:100%" class="slide-img">
                    <div class="absolute">
                        <div class="flex-container">
                            <div>
                                <a class="prev">&#10094;</a>
                            </div>
                            <div class="text">Blankets</div>
                            <div>
                                <a class="next">&#10095;</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slides fade" id="slide1">
                    <img src="/images/img2.jpg" style="width:100%" class="slide-img">
